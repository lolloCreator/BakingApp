<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/food_title_textview"
            android:text="Combro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/food_name_size"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/food_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:minWidth="100dp"/>
            <TextView
                android:id="@+id/quantity_textview"
                android:paddingLeft="8dp"
                android:text="350.0"
                android:paddingTop="16dp"
                android:textSize="@dimen/quantity_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/measurement_textview"
                android:text="CUP"
                android:paddingLeft="4dp"
                android:paddingTop="16dp"
                android:textSize="@dimen/measurement_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>